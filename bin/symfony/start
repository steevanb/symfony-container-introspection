#!/usr/bin/env bash

set -eu

readonly ROOT_DIR="$(realpath "$(dirname "$(realpath "$0")")/../..")"
source "${ROOT_DIR}"/config/docker.inc.bash

readonly BIN_DIR=bin/symfony
readonly DOCKER_IMAGE_NAME="${DOCKER_SYMFONY_START_IMAGE_NAME}"
source "${ROOT_DIR}/bin/dockerise.inc.bash"

php bin/symfony/start.php

echo "Open http://localhost:8090 in your browser to access Symfony."
